        color: #1a3c34;
        text-align: center;
        margin-bottom: 2rem;
        letter-spacing: 0.5px;
    }

    /* Form group styling */
    .form-group {
        margin-bottom: 1.8rem;
    }

    .form-label {
        font-size: 1rem;
        font-weight: 600;
        color: #34495e;
        margin-bottom: 0.5rem;
        display: block;
    }

