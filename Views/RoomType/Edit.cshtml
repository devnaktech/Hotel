@model Midterm.Models.RoomType

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* <h1>Edit</h1> *@

<div class="edit-page-container">
    <div class="form-card">
        <h2 class="form-title">Edit Room Type</h2>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4 text-center"></div>
            <input type="hidden" asp-for="RoomTypeId" />
            <div class="form-group">
                <label asp-for="RoomTypeName" class="form-label"> Room type name</label>
                <input asp-for="RoomTypeName" class="form-control" placeholder="Enter room type name" />
                <span asp-validation-for="RoomTypeName" class="text-danger"></span>
            </div>
            <div class="button-container">
                <input type="submit" value="Save" class="btn-save" />
                <a asp-action="Index" class="btn btn-outline-danger btn-lg">Back to List</a>
            </div>
        </form>
    </div>
</div>





