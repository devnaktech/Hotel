@model IEnumerable<Midterm.Models.Room>

<div class="d-flex justify-content-between p-3">
    <h3>Rooms</h3>

    <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
        Add Room
    </button>
</div>

<div class="card">
    <div class="card-body p-2 rounded-4">
        <table class="table rounded-4">
            <thead>
                <tr>
                    <th>No</th>
                    <th>@Html.DisplayNameFor(model => model.RoomName)</th>
                    <th>@Html.DisplayNameFor(model => model.RoomType)</th>
                    <th>@Html.DisplayNameFor(model => model.IsHidden)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int counter = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@counter</td>
                        @* <td>@Html.DisplayFor(modelItem => item.RoomName)</td> *@
                        @* <td>@Html.DisplayFor(modelItem => item.RoomType.RoomTypeName)</td> *@
                        <td>@Html.DisplayFor(modelItem => item.RoomName)</td>
                        <td>@(item.RoomType != null ? item.RoomType.RoomTypeName : "N/A")</td>

                        <td>@(item.IsHidden ? "Hidden" : "Visible")</td>
                        <td>
                            <div class="dropdown rounded-4">
                                <button class="btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-ellipsis-h"></i>
                                </button>
                                <ul class="dropdown-menu rounded-4">
                                    <li>
                                        <button type="button" class="dropdown-item text-secondary" data-bs-toggle="modal"
                                                data-bs-target="#staticBackdropDetail_@item.RoomId">
                                            <i class="fas fa-info-circle mr-2"></i>Details
                                        </button>
                                    </li>
                                    <li>
                                        <button type="button" class="dropdown-item text-warning" data-bs-toggle="modal"
                                                data-bs-target="#staticBackdropEdit_@item.RoomId">
                                            <i class="fas fa-pen mr-2"></i>Edit
                                        </button>
                                    </li>
                                    <li>
                                        <button type="button" class="dropdown-item text-danger" data-bs-toggle="modal"
                                                data-bs-target="#staticBackdropDelete_@item.RoomId">
                                            <i class="fas fa-trash mr-2"></i>Delete
                                        </button>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>

                    @* Modal for delete *@
                   @*  <div class="modal fade" id="staticBackdropDelete_@item.RoomId" data-bs-backdrop="static"
                         data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title fs-5">
                                        Delete Room (@item.RoomName)
                                    </h4>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body pt-0">
                                    <p>This action cannot be undone. The data will be permanently deleted.</p>
                                </div>
                                <form asp-action="Delete" asp-route-id="@item.RoomId" method="post">
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-danger">Confirm</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div> *@

                    @* Modal for edit *@
                    @* <div class="modal fade" id="staticBackdropEdit_@item.RoomId" data-bs-backdrop="static"
                         data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title fs-5">
                                        Edit Room (@item.RoomName)
                                    </h4>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body pt-0">
                                    <partial name="_Edit" model="item" />
                                </div>
                            </div>
                        </div>
                    </div> *@

                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>

@* Modal for add *@
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title fs-5" id="staticBackdropLabel">
                    Add Room
                </h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body pt-0">
                <partial name="_Create" model='new Midterm.Models.Room { RoomName = "", RoomTypeId = 0, IsHidden = false }' />
            </div>
        </div>
    </div>
</div>

