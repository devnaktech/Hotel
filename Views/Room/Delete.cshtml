
@model Midterm.Models.Room

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="delete-page-container">
    <div class="form-card">
        <h2 class="form-title">Delete Room</h2>
        <p class="confirmation-message">Are you sure you want to delete this room?</p>
        <div class="details-list">
            <dl>
                <dt>@Html.DisplayNameFor(model => model.RoomName)</dt>
                <dd>@Html.DisplayFor(model => model.RoomName)</dd>
                <dt>@Html.DisplayNameFor(model => model.IsHidden)</dt>
                <dd>@Html.DisplayFor(model => model.IsHidden)</dd>
                <dt>@Html.DisplayNameFor(model => model.RoomType)</dt>
                <dd>@Html.DisplayFor(model => model.RoomType.RoomTypeName)</dd>
            </dl>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="RoomId" />
            <div class="button-container">
                <input type="submit" value="Delete" class="btn-delete" />
                <a asp-action="Index" class="btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>


<style>
    /* Container for the entire page */
    .delete-page-container {
        /*min-height: 100vh;*/
        display: flex;
        align-items: center;
        justify-content: center;
        /*background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);*/
        padding: 3rem;
    }

    /* Card for the form */
    .form-card {
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        width: 100%;
        padding: 2.5rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin: 0 auto;
    }

        .form-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 16px 32px rgba(0, 0, 0, 0.15);
        }

    /* Form title */
    .form-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: #1a3c34;
        text-align: center;
        margin-bottom: 1rem;
        letter-spacing: 0.5px;
    }

    /* Confirmation message */
    .confirmation-message {
        font-size: 1.2rem;
        color: #dc3545;
        text-align: center;
        margin-bottom: 2rem;
    }

    /* Details list styling */
    .details-list {
        margin-bottom: 2rem;
    }

        .details-list dt {
            font-size: 1rem;
            font-weight: 600;
            color: #34495e;
            margin-bottom: 0.5rem;
        }

        .details-list dd {
            font-size: 1rem;
            color: #555;
            margin-bottom: 1.5rem;
            padding-left: 1rem;
        }

    /* Button container */
    .button-container {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin-top: 2.5rem;
    }

    /* Delete button */
    .btn-delete {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 0.85rem 2.5rem;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 600;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-delete:hover {
            background-color: #c82333;
            transform: translateY(-3px);
        }

    /* Cancel button */
    .btn-cancel {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 0.85rem 2.5rem;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 600;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-cancel:hover {
            background-color: #218838;
            transform: translateY(-3px);
        }
</style>