@model Midterm.Models.Customer

<link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<form asp-action="Edit" method="post" asp-controller="Customer" class=" bg-white   shadow-sm mx-auto"
      style="max-width: 600px;">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <input asp-for="CustomerId" type="hidden" />

    <div class="row g-3 my-1">
        <div class="col-md-6">
            <label asp-for="FirstName" class="form-label fw-bold text-dark"></label>
            <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="LastName" class="form-label fw-bold text-dark"></label>
            <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-md-6">
            <label asp-for="Phone" class="form-label fw-bold text-dark"></label>
            <input asp-for="Phone" class="form-control" placeholder="e.g., 123-456-7890" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Email" class="form-label fw-bold text-dark"></label>
            <input asp-for="Email" class="form-control" placeholder="e.g., name@gmail.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-md-6">
            <label asp-for="Gender" class="form-label fw-bold text-dark"></label>
            <select asp-for="Gender" class="form-select">
                <option value="">Select gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Expense" class="form-label fw-bold text-dark"></label>
            <input asp-for="Expense" class="form-control" type="number" step="0.01" placeholder="e.g, 500,0000" />
            <span asp-validation-for="Expense" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-md-6">
            <label asp-for="Address" class="form-label fw-bold text-dark"></label>
            <input asp-for="Address" class="form-control" placeholder="Enter full address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="PasswortNo" class="form-label fw-bold text-dark"></label>
            <input asp-for="PasswortNo" class="form-control" />
            <span asp-validation-for="PasswortNo" class="text-danger"></span>
        </div>
    </div>

    @*  <div class="row g-3 mb-4">
        <div class="col-md-8">
            <label asp-for="Address" class="form-label fw-bold text-dark"></label>
            <input asp-for="Address" class="form-control" placeholder="Enter full address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
         <div class="col-md-4 d-flex align-items-center">
            <div class="form-check">
                <input class="form-check-input" asp-for="IsActive" />
                <label class="form-check-label text-dark" asp-for="IsActive"></label>
            </div>
        </div>
    </div> *@

    <div class="row g-3">
        <div class="col-md-6">
            <input type="submit" value="Save" class="btn btn-primary w-100 py-2" />
        </div>
        <div class="col-md-6">
            <a asp-action="Index" class="btn btn-outline-danger w-100 py-2">Back to List</a>
        </div>
    </div>
</form>

<style>
    .form-label {
        font-size: 0.95rem;
        color: #333;
    }

    .form-control,
    .form-select {
        border-radius: 0.5rem;
        border: 1px solid #ced4da;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.05);
        height: 45px;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .form-check-input {
        margin-top: 0;
    }

    .btn {
        border-radius: 0.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
        border-color: #6c757d;
    }

    input[readonly] {
        background-color: #f8f9fa;
        cursor: not-allowed;
    }
</style>
