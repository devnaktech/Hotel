@model Midterm.Models.Room

@{
    ViewData["Title"] = "Create Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold text-gradient">Create New Room</h1>
                <div class="subtitle-line mx-auto"></div>
            </div>

            <!-- Main Card -->
            <div class="room-card position-relative">
                <div class="card-overlay"></div>

                <div class="card-content position-relative">
                    <h2 class="room-title text-center mb-4">New Room</h2>

                    <!-- Form Layout -->
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

                        <div class="table-responsive">
                            <table class="table table-elegant">
                                <tbody>
                                    <tr>
                                        <th scope="row">
                                            <label asp-for="RoomName" class="form-label label-style"></label>
                                        </th>
                                        <td>
                                            <input asp-for="RoomName" class="form-control input-style" placeholder="Enter room name" />
                                            <span asp-validation-for="RoomName" class="text-danger"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row">
                                            <label asp-for="IsHidden" class="form-label label-style"></label>
                                        </th>
                                        <td>
                                            <label class="form-check-label label-style">
                                                <input class="form-check-input" asp-for="IsHidden" /> @Html.DisplayNameFor(model => model.IsHidden)
                                            </label>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row">
                                            <label asp-for="RoomTypeId" class="form-label label-style"></label>
                                        </th>
                                        <td>
                                            <div class="row"> 
                                                <select asp-for="RoomTypeId" class="form-control input-style col-8" asp-items="ViewBag.RoomTypeId"></select>
                                                <a href="/RoomTypes" class="nav-link col-2">
                                                    <p>
                                                        Type
                                                    </p>
                                                </a>
                                            </div> 
                                            <span asp-validation-for="RoomTypeId" class="text-danger"></span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!-- Actions -->
                        <div class="action-buttons mt-5 text-center">
                            <div class="form-group btn btn-success  me-3">
                                <i class="bi bi-save"></i>
                                <input type="submit" value="Save"/>
                            </div>
                            <a asp-action="Index" class="btn btn-outline-elegant">
                                <i class="bi bi-arrow-return-left"></i> Back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Gradient Text */
    .text-gradient {
        background: linear-gradient(45deg, #2c3e50, #3498db);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    /* Subtitle Line */
    .subtitle-line {
        width: 100px;
        height: 3px;
        background: linear-gradient(90deg, #3498db, #2c3e50);
        margin-top: 15px;
    }

    /* Room Card Styling */
    .room-card {
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        transition: transform 0.3s ease;
    }

        .room-card:hover {
            transform: translateY(-5px);
        }

    .card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(52,152,219,0.1), rgba(44,62,80,0.1));
        opacity: 0.2;
    }

    /* Card Content */
    .card-content {
        position: relative;
        z-index: 1;
    }

    .room-title {
        font-size: 2.2rem;
        color: #2c3e50;
        font-weight: 700;
        letter-spacing: 1px;
    }

    /* Table Styling */
    .table-elegant {
        border-collapse: separate;
        border-spacing: 0 10px;
    }

        .table-elegant th {
            background: #f8f9fa;
            color: #2c3e50;
            font-weight: 600;
            padding: 1rem 1.5rem;
            border: none;
            width: 30%;
            border-top-left-radius: 10px;
            border-bottom-left-radius: 10px;
        }

        .table-elegant td {
            background: rgba(255, 255, 255, 0.9);
            padding: 1rem 1.5rem;
            border: none;
            border-top-right-radius: 10px;
            border-bottom-right-radius: 10px;
            vertical-align: middle;
        }

    /* Form Input and Select Styling */
    .input-style {
        border-radius: 0.75rem;
        border: 1px solid #e5e7eb;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        background-color: #f9fafb;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        width: 100%;
    }

        .input-style:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
            outline: none;
        }

    /* Label Styling */
    .label-style {
        font-size: 1rem;
        font-weight: 500;
        color: #2c3e50;
        margin-bottom: 0;
    }

    /* Button Styling */
    .btn-gradient {
        background: linear-gradient(45deg, #3498db, #2c3e80);
        color: white;
        border: none;
        padding: 0.7rem 1.5rem;
        border-radius: 25px;
        transition: all 0.3s ease;
    }

        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(52,152,219,0.4);
            color: white;
        }

    .btn-outline-elegant {
        border: 2px solid #2c3e50;
        color: #2c3e50;
        padding: 0.7rem 1.5rem;
        border-radius: 25px;
        transition: all 0.3s ease;
    }

        .btn-outline-elegant:hover {
            background: #2c3e50;
            color: white;
        }

    /* Custom Spacing */
    .py-5 {
        padding-top: 3rem !important;
        padding-bottom: 3rem !important;
    }

    .mb-3 {
        margin-bottom: 1rem !important;
    }

    .mb-4 {
        margin-bottom: 1.5rem !important;
    }

    .mb-5 {
        margin-bottom: 3rem !important;
    }

    .me-3 {
        margin-right: 1rem !important;
    }

    .text-center {
        text-align: center;
    }

    .text-danger {
        color: #ef4444 !important;
    }
</style>













