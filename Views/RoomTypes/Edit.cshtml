 @model Midterm.Models.RoomType

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-5">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold text-gradient">Edit Room Type</h1>
        <hr class="subtitle-line mx-auto" />
    </div>

    <!-- Main Card -->
    <div class="room-card p-4 mx-auto" style="max-width: 500px;">
        <div class="card-body p-4 rounded-4">
            <h4 class="mb-3 text-gradient">Room Type Information</h4>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>
                <input type="hidden" asp-for="RoomTypeId" />

                <div class="mb-3">
                    <label asp-for="RoomTypeName" class="form-label label-style"></label>
                    <input asp-for="RoomTypeName" class="form-control input-style" placeholder="Enter room type name" />
                    <span asp-validation-for="RoomTypeName" class="text-danger"></span>
                </div>

                <!-- Actions -->
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <input type="submit" value="Save" class="btn btn-create" />
                    <a asp-action="Index" class="btn btn-outline-back">
                        <i class="fas fa-arrow-left me-2"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
