 @model IEnumerable<Midterm.Models.RoomType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-5">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold text-gradient">Room Types</h1>
        <hr class="subtitle-line mx-auto" />
    </div>

    <!-- Header Actions -->
    <div class="d-flex justify-content-between align-items-center mb-4 p-3">
        <h3 class="mb-0"></h3>
        <button asp-action="Create" type="button" class="btn btn-gradient btn-add-room" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
            Add Room Type
        </button>
    </div>

    <!-- Main Card -->
    <div class="room-card p-3">
        <div class="card-body p-2 rounded-4">
            <table class="table table-elegant rounded-4">
                <thead>
                    <tr>
                        <th class="first-column">
                            @Html.DisplayNameFor(model => model.RoomTypeName)
                        </th>
                        <th class="last-column"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoomTypeName)
                            </td>
                            <td>
                                <div class="dropdown rounded-4">
                                    <button class="btn btn-dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-h"></i>
                                    </button>
                                    <ul class="dropdown-menu rounded-4">
                                        <li>
                                            <a asp-action="Edit" asp-route-id="@item.RoomTypeId" class="dropdown-item text-warning">
                                                <i class="fas fa-pen mr-2"></i> Edit
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-action="Delete" asp-route-id="@item.RoomTypeId" class="dropdown-item text-danger">
                                                <i class="fas fa-trash mr-2"></i> Delete
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
         aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title fs-5" id="staticBackdropLabel">Add Room Type</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body pt-0">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-2"></div>

                        <div class="mb-2">
                            <label asp-for="FirstOrDefault().RoomTypeName" class="form-label label-style"></label>
                            <input asp-for="FirstOrDefault().RoomTypeName" class="form-control input-style" placeholder="Enter room type name" />
                            <span asp-validation-for="FirstOrDefault().RoomTypeName" class="text-danger"></span>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex justify-content-center mt-3">
                            <input type="submit" value="Create" class="btn btn-create me-2" />
                            <button type="button" class="btn btn-outline-back" data-bs-dismiss="modal">Back</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
